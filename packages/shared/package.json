{
  "name": "@claudius/shared",
  "version": "0.5.2",
  "description": "Shared types and utilities for Claudius",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
