  },
  "keywords": [
    "shared",
    "types",
    "utilities"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "sql.js": "^1.11.0"
  },
  "devDependencies": {
    "@types/sql.js": "^1.4.9",
    "@types/node": "^20.10.6",
    "typescript": "^5.3.3",
    "vitest": "^2.1.0"
  }
}
