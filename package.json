{
  "name": "claudius",
  "version": "0.5.1",
  "private": true,
  "description": "A macOS application that generates personalized daily research briefings",
  "workspaces": [
    "packages/cli",
    "packages/shared",
    "packages/frontend",
    "packages/mcp-server"
  ],
  "scripts": {
    "cli": "npm run -w @claudius/cli start --",
    "dev": "npm run -w @claudius/frontend dev",
    "dev:tauri": "cd src-tauri && cargo tauri dev",
    "build": "npm run build --workspaces",
    "build:tauri": "cd src-tauri && cargo tauri build",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present"
  },
  "keywords": [
    "research",
    "briefing",
    "ai",
    "macos"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "cssesc": "^3.0.0"
  }
}
