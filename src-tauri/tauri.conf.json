{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Claudius",
  "version": "0.3.1",
  "identifier": "com.claudius.app",
  "build": {
    "beforeDevCommand": "npm run dev -w @claudius/frontend",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build -w @claudius/frontend",
    "frontendDist": "../packages/frontend/dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Claudius",
        "width": 1200,
        "height": 800,
        "visible": true,
        "center": true,
        "resizable": true,
        "fullscreen": false
      },
      {
        "label": "popover",
        "title": "Claudius",
        "width": 320,
        "height": 480,
        "url": "popover.html",
        "visible": false,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "resizable": false,
        "transparent": true
      },
      {
        "label": "settings",
        "title": "Claudius Settings",
        "width": 600,
        "height": 500,
        "url": "settings.html",
        "visible": false,
        "center": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' ws://localhost:5173 wss://localhost:5173 https://api.anthropic.com https://api.github.com https://*"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDNENTczRTkyRjg5MzBCRUEKUldUcUM1UDRrajVYUFhuTTA2cnhjaUcvRGlGeGJxM29WUExiN1BwVVh0cFUzb0d1R0FueXovRnUK",
      "endpoints": [
        "https://github.com/chrisvanbuskirk/claudius/releases/latest/download/latest.json"
      ]
    }
  }
}
